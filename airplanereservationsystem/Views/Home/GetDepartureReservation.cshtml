@model Departure
@{ Layout = "_Layout"; ViewBag.Title = "Get Departure Reservation by Route Number";}

<h2>Get Reservation by Route Number <a asp-action="ViewDepartures" class="btn btn-sm btn-primary">Back</a></h2>
<h3>@ViewBag.StatusCode</h3>
<form method="post">
    <div class="form-group">
        <label for="RouteNum">Route Number:</label>
        <input class="form-control" name="RouteNum" />
    </div>
    <div class="text-center panel-body">
        <button type="submit" class="btn btn-sm btn-primary">Get Reservation</button>
    </div>
</form>

@if (Model != null)
{   
    <h2>Reservation</h2>
    <table class="table table-sm table-striped table-bordered m-2">
        <thead>
            <tr>
                <th>Route Number</th>
                <th>Airport</th>
                <th>Scheduled Departure Date</th>
                <th>Scheduled Departure Time</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Model.RouteNum</td>
                <td>@Model.AirportCode</td>
                <td>@Model.Date</td>
                <td>@Model.ScheduleDepTime</td>
            </tr>
        </tbody>
    </table>
}