@model IEnumerable<Departure>
@{ Layout = "_Layout"; ViewBag.Title = "Departure";}

<h2>Departure Flights</h2>
<a asp-action="AddDepartureReservation" class="btn btn-sm btn-primary">Add Departure Reservation</a>
<a asp-action="GetDepartureReservation" class="btn btn-sm btn-secondary">Get Departure Reservation</a>
<a asp-action="DeleteDepartureReservation" class="btn btn-sm btn-secondary">Delete Departure Reservation</a>
<h2><a asp-action="Index" class="btn btn-sm btn-primary">Back</a></h2>

<table class="table table-sm table-striped table-bordered m-2">
    <thead>
        <tr>
            <th>Route Number</th>
            <th>Airport</th>
            <th>Scheduled Departure Date</th>
            <th>Scheduled Departure Time</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var r in Model)
        {
            <tr>
                <td>@r.RouteNum</td>
                <td>@r.AirportCode</td>
                <td>@r.Date</td>
                <td>@r.ScheduleDepTime</td>

            </tr>
        }
    </tbody>
</table>